using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Calculadora
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Digite o primeiro numero");
            int n1 = int.Parse(Console.ReadLine());
            Console.WriteLine("Digite o segundo numero");
            int n2 = int.Parse(Console.ReadLine());

            int rsoma = Soma(n1, n2);
            Console.WriteLine("Resultado da soma: {0}", rsoma);
            int rsub = Sub(n1, n2);
            Console.WriteLine("Resultado da subitra��o: {0}", rsub);
            int rmult = Mult(n1, n2);
            Console.WriteLine("Resultado da multiplica��o: {0}", rmult);
            int rdiv = Div(n1, n2);
            Console.WriteLine("Resultado da divis�o: {0}", rdiv);
            Console.ReadKey();

        }
        public static int Soma(int n1, int n2)
        {
            return n1 + n2;
        }
        public static int Sub(int n1, int n2)
        {
            return n1 - n2;
        }
        public static int Mult(int n1, int n2)
        {
            return n1 * n2;
        }
        public static int Div(int n1, int n2)
        {
            return n1 / n2;
        }
    }
}
